@model WebStore.Domain.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Удаление сотрудника id:"; 
}

<h4>Удалить сотрудника @Model.LastName @Model.FirstName @Model.Patronymic</h4>
<hr />

<div>
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
        <input type="submit" value="Удалить"/>
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>