@model IEnumerable<WebStore.Models.Employee>

<div class="container">

    <h3>Сотрудники</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>карточка сотрудника</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
           {
               <tr>
                   <td>@employee.Id</td>
                   <td>@employee.LastName</td>
                   <td>@employee.FirstName</td>
                   <td>@employee.Patronomic</td>
                   <td>@employee.Age</td>
                   <td>
                       <a asp-action="EmployeesInfo", asp-route-id="@employee.Id">инфо.</a>
                       <a asp-action="Edit", asp-route-id="@employee.Id">редактиование</a>
                   </td>
               </tr>
           }
        </tbody>
    </table>
    <hr />
	<a  asp-controller="Home" asp-action="Index">Главная страница</a>
</div>