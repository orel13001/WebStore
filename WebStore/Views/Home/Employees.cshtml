@model IEnumerable<WebStore.Models.Employee>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Employees</title>
</head>
<body>

    <h3>Сотрудники</h3>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th>карточка сотрудника</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
           {
               <tr>
                   <td>@employee.Id</td>
                   <td>@employee.LastName</td>
                   <td>@employee.FirstName</td>
                   <td>@employee.Patronomic</td>
                   <td>@employee.Age</td>
                   <td>
                       <a href = "~/home/employee/@employee.Id">инфо.</a>
                   </td>
               </tr>
           }
        </tbody>
    </table>
    <hr />
	<a href="~/Home/Index">Главная страница</a>


</body>
</html>
